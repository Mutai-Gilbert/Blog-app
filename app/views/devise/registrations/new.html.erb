<div class='devise-container'>
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'devise-form'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'device-width in-field' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'device-width in-field' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>Must be at least <%= @minimum_password_length %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'device-width in-field' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'device-width in-field' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'device-width common-btn' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>